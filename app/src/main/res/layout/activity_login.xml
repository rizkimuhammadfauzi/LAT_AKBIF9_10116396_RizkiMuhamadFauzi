<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <TextView
            android:id="@+id/kode_keluarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Keluarga"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ketikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketikan kode keluarga yang Ayah Bunda miliki disini"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/kode_keluarga"/>

        <EditText
            android:id="@+id/btnKode"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ketikan"
            android:background="@drawable/edittext"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:text="A1B2C3"
            android:textStyle="bold"
            android:textSize="16dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnKode"
            android:text="Dengan menekan tombol masuk berarti Anda menyetujui"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt1"
            android:text="@string/text"
            android:layout_centerInParent="true"/>

        <Button
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundedbtn"
            android:text="Masuk"
            android:onClick="masuknya"
            android:layout_below="@id/txt2"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Belum Punya Kode Keluarga ?"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbtnbiru"
            android:text="Beli Kode Keluarga Disini"
            android:layout_below="@id/txt3"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

</RelativeLayout>